{
    // We run with ts-node so these options are just to satisfy the editor
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "CommonJS",
        "target": "ES2022",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
    },
    "ts-node": {
        "esm": true,
        "skipIgnore": true,
        "logError": true,
        "compilerOptions": {
            "esModuleInterop": true,
            "resolveJsonModule": true,
            "strict": true,
            "noImplicitAny": true,
        }
    }
}